BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_temperature
            font_size: 40
            on_text: app.convert_temperature()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1.0)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1.0)
    BoxLayout:
        orientation: 'horizontal'
        Button:
            id: conversion_type
            text: 'Celsius to Fahrenheit'
            on_press: app.change_conversion()
    Label:
        id: output_label
        font_size: 40
        color: ('yellow')
