BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.2
        Button:
            text: 'Clear'
            on_press: app.handle_clear()
        Button:
            text: 'Get your grade'
            on_press: app.handle_grade()
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: input_grade
            text: ''
            font_size: 40
        Label:
            text: 'Enter your grade'
            font_size: 40
            color: (1, 1, 0, 1)
            id: output_label